<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title" data-key="heroTitle">
                    {{t 'heroTitle'}}
                </h1>
                <p class="hero-subtitle" data-key="heroSubtitle">
                    {{t 'heroSubtitle'}}
                </p>
                
                <div class="hero-buttons">
                    <button class="btn btn-primary" data-key="registerFarmer" onclick="handleRegister('farmer')">
                        <span class="btn-icon">👨‍🌾</span>
                        {{t 'registerFarmer'}}
                    </button>
                    <button class="btn btn-secondary" data-key="registerExpert" onclick="handleRegister('expert')">
                        <span class="btn-icon">🧑‍🎓</span>
                        {{t 'registerExpert'}}
                    </button>
                </div>
            </div>
            
            <!-- Decorative Elements -->
            <div class="hero-decorations">
                <div class="decoration decoration-1">🌿</div>
                <div class="decoration decoration-2">🌱</div>
                <div class="decoration decoration-3">⚙️</div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <div class="features-header">
            <h2 class="features-title" data-key="featuresTitle">
                {{t 'featuresTitle'}}
            </h2>
        </div>
        
        <div class="features-grid">
            {{#each features}}
            <div class="feature-card" data-feature="{{@key}}">
                <div class="feature-icon">
                    <span class="icon">{{this.icon}}</span>
                </div>
                <div class="feature-content">
                    <h3 class="feature-title" data-key="feature-{{@key}}-title">
                        {{this.title}}
                    </h3>
                    <p class="feature-description" data-key="feature-{{@key}}-description">
                        {{this.description}}
                    </p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="cta-content">
            <h2 class="cta-title">{{t 'readyToStart'}}</h2>
            <p class="cta-subtitle">{{t 'joinThousands'}}</p>
            <div class="cta-buttons">
                <button class="btn btn-primary" onclick="handleGetStarted()">
                    {{t 'getStarted'}}
                </button>
                <button class="btn btn-outline" onclick="handleLearnMore()">
                    {{t 'learnMore'}}
                </button>
            </div>
        </div>
    </div>
</section>