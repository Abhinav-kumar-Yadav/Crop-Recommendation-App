                                <p>Prepared field for wheat sowing. Applied NPK fertilizer as recommended by AI assistant.</p>
                                <div class="entry-media">
                                    <div class="media-placeholder">
                                        <i class="fas fa-image"></i>
                                    </div>
                                </div>
                                <div class="entry-actions">
                                    <button class="btn btn--outline btn--sm">
                                        <i class="fas fa-microphone"></i> Voice Note
                                    </button>
                                    <button class="btn btn--outline btn--sm">
                                        <i class="fas fa-camera"></i> Add Photo
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button class="floating-add-btn" id="add-entry-btn">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </section>

            <!-- Settings Page -->
            <section id="settings-page" class="content-page hidden">
                <div class="page-header">
                    <h1>Settings</h1>
