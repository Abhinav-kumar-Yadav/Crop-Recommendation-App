<section id="farm-diary-page" class="content-page hidden">
                <div class="page-header">
                    <h1>Farm Diary</h1>
                    <p>Track your farming activities and maintain digital records.</p>
                </div>

                <div class="diary-content">
                    <div class="farm-selector">
                        <select class="form-control" id="farm-selector">
                            <option value="1">Main Farm - Ludhiana, Punjab (5 acres)</option>
                            <option value="2">Secondary Plot - Amritsar, Punjab (2 acres)</option>
                        </select>
                        <button class="btn btn--outline">
                            <i class="fas fa-plus"></i> Add Farm
                        </button>
                    </div>

                    <div class="diary-entries">
                        <div class="diary-entry">
                            <div class="entry-date">
