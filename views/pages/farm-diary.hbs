                        <h3>Data & Privacy</h3>
                        <div class="setting-item">
                            <label>Offline Data Sync</label>
                            <label class="toggle">
                                <input type="checkbox" checked>
                                <span class="toggle-slider"></span>
                            </label>
                        </div>
                        <div class="setting-item">
                            <label>Export Farm Data</label>
                            <button class="btn btn--outline">Export</button>
                        </div>
                    </div>
                </div>
